package coding;
import java.util.Scanner;
public class Laptop {

	public static void main(String[] args) 
	{
		Scanner in=new Scanner(System.in);
		Laptop ob=new Laptop();
		
		String name;
		int num,code;
		int hour,services,goods,laptopnum,shipping1,shipping2;
		double laptop,goodstotal=0;
		double customertype,laptopcond;
		double servicesfees,sumgoods=0.0,laptopfees,laptopsum=0.0,totalfees=0.0;
		double value1=0.0 ,value2=0.0 ,value3=0.0;
		
		
		System.out.println("**** Welcome To UUM LTE Communication Enterprise ****");
		System.out.println();
		System.out.println("Please enter your name :");
		name=in.nextLine();
		ob.showName(name);
		System.out.println("Please enter the number of section you will use which is 1-3. ");
		num=in.nextInt();		
		
		for(int i=0; i<num; i++) {
			System.out.println("Please enter the code section : ");
			System.out.println("For code '1' - Services Section ");
			System.out.println("For code '2' - Goods Section ");
			System.out.println("For code '3' - Laptop Section ");
			code=in.nextInt();
			System.out.println();
			
			if(code==1) {
				System.out.println("##### Services Section #####");
				System.out.println("Please enter the amount of services charge rate per hour as below : ");
				System.out.println("Repairing = 50 \nHardware Installation = 40 \nAntivirus Installation = 80 \nData Recovery = 50 \nMaintainance = 30");
				services=in.nextInt();
				
				System.out.println("Please enter required hour to finish it : ");
				hour=in.nextInt();
				
				System.out.println("You want it ASAP or not?");
				System.out.println("If ASAP, enter '1.5' while if not ASAP, enter '1'");
				customertype=in.nextDouble();
				
				System.out.println("If you need the laptop be delivered to you, please enter '10'");
				System.out.println("But If you want to come to pick it, please enter '0'");
				shipping1=in.nextInt();
				
				servicesfees=ob.services_sum(services,hour,customertype,shipping1);
				System.out.println("Your services amount will be RM" + servicesfees);
				value1=servicesfees;
				System.out.println();
			}
			
			else if(code==2) {
				System.out.println("##### Goods Section #####");
				System.out.println("Please enter the number of different goods type : ");
				goods=in.nextInt();
				
				double[] goodstype=new double [goods];
				double[] goodsprice=new double[goods];
				double[] quantity=new double[goods];
				double[] goodscond=new double[goods];
				int[] shipping=new int[goods];
				double[] goodsfees=new double[goods];
				
				for(int j=0; j<goodstype.length; j++) {
					System.out.println("Please enter the price of the goods " + (j+1) + " : ");
					goodsprice[j]=in.nextDouble();
					
					System.out.println("Please enter the quantity of the goods : ");
					quantity[j]=in.nextInt();
					
					goodstotal=goodsprice[j]*quantity[j];
					System.out.println("The price of the goods after multiply with its quantity : RM"+goodstotal);
					
					System.out.println("You want it ASAP/Available/Preorder ?");
					System.out.println("If ASAP, enter '1.2' while if Available, enter '1' and if Preorder, enter '1.1'");
					goodscond[j]=in.nextDouble();
					
					System.out.println("If you need it to be delivered to you, please enter '5'");
					System.out.println("But If you want to come to pick it, please enter '0'");
					shipping[j]=in.nextInt();
					
					goodsfees[j]=goodsprice[j]*quantity[j]*goodscond[j]+shipping[j];
					sumgoods=sumgoods+goodsfees[j];
					System.out.printf("So the total price for goods " +(j+1) +" is RM%.2f",goodsfees[j]);
					System.out.println();
					System.out.println();
				}
				
				System.out.printf("Your goods amount will be RM%.2f" , sumgoods);
				value2=sumgoods;
				System.out.println();
				
				if(goods>1) {
				System.out.println("The highest goods price is RM" + ob.highvalue(goods,goodsfees) + " that is goods " +ob.highgoods(goods,goodsfees));
				}
				
				System.out.println();
				System.out.println();
			}
			
			else if(code==3) {
				System.out.println("##### Laptop Section #####");
				System.out.println("Please enter the number of laptop : ");
				laptopnum=in.nextInt();
				
				if(laptopnum>1) {
					int k;
					for(k=0; k<laptopnum; k++) {
						System.out.println("Please enter the price of the laptop : ");
						laptop=in.nextDouble();
					
						System.out.println("You want it ASAP/Available/Preorder ?");
						System.out.println("If ASAP, enter '1.2' while if Available, enter '1' and if Preorder, enter '1.1'");
						laptopcond=in.nextDouble();
							
						System.out.println("If you need it to be delivered to you, please enter '10'");
						System.out.println("But If you want to come to pick it, please enter '0'");
						shipping2=in.nextInt();
					
						laptopfees=ob.laptop_sum(laptop,laptopcond,shipping2);
						System.out.printf("Your laptop amount for laptop " +(k+1) + " will be RM%.2f" , laptopfees);
						System.out.println();
						laptopsum=laptopsum+laptopfees;
						System.out.println();
						}
						System.out.println("Your laptop amount for whole laptop is " + laptopsum);
						value3=laptopsum;
						System.out.println();}
				
				else {
				System.out.println("Please enter the price of the laptop : ");
				laptop=in.nextDouble();
				
				System.out.println("You want it ASAP/Available/Preorder ?");
				System.out.println("If ASAP, enter '1.2' while if Available, enter '1' and if Preorder, enter '1.1'");
				laptopcond=in.nextDouble();
						
				System.out.println("If you need it to be delivered to you, please enter '10'");
				System.out.println("But If you want to come to pick it, please enter '0'");
				shipping2=in.nextInt();
				
				laptopfees=ob.laptop_sum(laptop,laptopcond,shipping2);
				System.out.printf("Your laptop amount will be RM%.2f" , laptopfees);
				value3=laptopfees;
				System.out.println();
				}
			}
			
			else {
				ob.invalid();
				i=i-1;
				}
			ob.total_sum(value1,value2,value3);
			totalfees=ob.total_sum(value1,value2,value3);
			}	
			
			System.out.printf("\nYour total amount will be RM%.2f" , totalfees);
			System.out.println();
			System.out.println("\n*** Thank you for choosing UUM LTE Communication Enterprise. ***");
			}
	
			void showName(String a) {
				System.out.println("Hello " +a +", our dear customer !");
			}
			
			double services_sum(int a,int b,double c,double d) {
				return a*b*c+d;
				
			}
			
			double laptop_sum(double a,double b,int c) {
				return a*b+c;
			}
			
			void invalid() {
				System.out.println("Invalid code, please enter it again. ");
				System.out.println();
				
			}
			
			double total_sum(double a,double b,double c) {
				return a+b+c;
			}
			
			double highvalue(int a, double[] b) {
				double max=b[0];
				for(int i=0; i<a; i++) {
					if (max<b[i])
						max=b[i];
				}
					return max;
				}
			
			int highgoods(int a, double[] b) {
				int high=0;
				double max=b[0];
				for(int i=0; i<a; i++) {
					if (max<b[i])
						high=i+1;
				}
					return high;
			}
	}
